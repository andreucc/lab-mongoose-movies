<h2>Movies</h2>
<ul>
  {{#each movies}}
    <li><a href="/movies/details/{{_id}}">{{title}}</a></li>
    <form action="/movies/{{_id}}/delete">
      <button type="submit">Delete</button>
    </form>
    <form action="/movies/{{_id}}/edit">
      <button type="submit">Edit</button>
    </form>
    <br> 
  {{/each}}  
</ul>
<h4><a href="/movies/new">Add a new movie</a></h4>